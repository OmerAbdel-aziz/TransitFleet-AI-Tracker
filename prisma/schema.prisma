generator client {
  provider = "prisma-client-js"
 
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}



model BusHistory {
  id        String   @id @default(cuid())
  busId     String
  route     String
  lat       Float?
  lng       Float?
  eta       DateTime?
  delay     Int?

  // Keep original timestamp (maps to createdAt in DB if it already exists)
  createdAt DateTime @default(now())

  @@index([route])
  @@index([createdAt])
  @@index([busId, createdAt])
}

